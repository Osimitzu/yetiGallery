---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Yetis Monterrey, Nuevo León, México. Yetis Originales con nombre y diseño grabado"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="yetiLogo.png" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
